@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<div class="row g-3">
    <div class="col-md-3">
        <div class="card p-3">
            <h5>Total Users</h5>
            <span>@ViewBag.TotalUsers</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <h5>Total Exercises</h5>
            <span>@ViewBag.TotalExercises</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <h5>Total Classes</h5>
            <span>@ViewBag.TotalClasses</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <h5>Workout Templates</h5>
            <span>@ViewBag.TotalWorkoutTemplates</span>
        </div>
    </div>
    <div class="col-md-3 mt-3">
        <div class="card p-3">
            <h5>Nutrition Templates</h5>
            <span>@ViewBag.TotalNutritionTemplates</span>
        </div>
    </div>
</div>

<hr />

<div class="d-flex flex-wrap gap-2">
    <a class="btn btn-primary" asp-action="Users">Manage Users</a>
    <a class="btn btn-primary" asp-action="Exercise">Manage Exercises</a>
    <a class="btn btn-primary" asp-action="WorkoutPlan">Manage Workout Plans</a>
    <a class="btn btn-primary" asp-action="NutritionPlan">Manage Nutrition Plans</a>
    <a class="btn btn-primary" asp-action="GymClasses">Manage Gym Classes</a>
    <a asp-action="GenerateReport" asp-controller="Admin" class="btn btn-info">Generate Report</a>

   
</div>



