@model GymHub.Models.Exercises;
@{
    ViewData["Title"] = "Delete Exercise";
}

<h2>Delete Exercise</h2>
<p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>

<form asp-action="ExerciseDelete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Exercise" class="btn btn-secondary">Cancel</a>
</form>
