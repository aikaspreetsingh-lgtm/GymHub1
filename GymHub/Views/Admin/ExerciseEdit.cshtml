@model GymHub.Models.Exercises;
@{
    ViewData["Title"] = "Edit Exercise";
}

<h2>Edit Exercise</h2>

<form asp-action="ExerciseEdit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PrimaryMuscleGroup"></label>
        <input asp-for="PrimaryMuscleGroup" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Equipment"></label>
        <input asp-for="Equipment" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Instructions"></label>
        <textarea asp-for="Instructions" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Exercise" class="btn btn-secondary">Back</a>
</form>


