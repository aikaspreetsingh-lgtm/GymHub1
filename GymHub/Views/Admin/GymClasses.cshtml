@model IEnumerable<GymClass>
@{
    ViewData["Title"] = "Gym Classes 🏋️";
}

<h2>Gym Classes</h2>

<p>
    <a class="btn btn-success" asp-action="GymClassesCreate">+ Create Class</a>
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</p>
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text"
               class="form-control"
               name="search"
               value="@ViewData["Search"]"
               placeholder="Search by name..." />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Starts</th>
            <th>Ends</th>
            <th>Capacity</th>
            <th>Bookings</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Title</td>
                <td>@c.StartsAt</td>
                <td>@c.EndsAt</td>
                <td>@c.Capacity</td>
                <td>@(c.Bookings?.Count ?? 0)</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-warning" asp-action="GymClassesEdit" asp-route-id="@c.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="GymClassesDelete" asp-route-id="@c.Id">Delete</a>
                    <a asp-action="GymClassesDetails" asp-route-id="@c.Id" class="btn btn-info btn-sm">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>

