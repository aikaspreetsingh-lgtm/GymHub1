@model GymHub.Models.GymClass
@{
    ViewData["Title"] = "Create Gym Class";
}

<h2>Create Gym Class</h2>

<form asp-action="GymClassesCreate" asp-controller="Admin" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="StartsAt"></label>
        <input asp-for="StartsAt" type="datetime-local" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="EndsAt"></label>
        <input asp-for="EndsAt" type="datetime-local" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" type="number" />
    </div>

    <button class="btn btn-success" type="submit">Create</button>
    <a asp-action="GymClasses" class="btn btn-secondary">Back</a>
</form>
<div asp-validation-summary="All" class="text-danger"></div>


