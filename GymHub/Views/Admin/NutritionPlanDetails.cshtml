@model GymHub.Models.NutritionPlan
@{
    ViewData["Title"] = "Nutrition Plan Details";
}

<h2>Nutrition Plan Details</h2>

<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Total Calories (per day)</dt>
            <dd class="col-sm-9">@Model.TotalCaloriesPerDay</dd>

            <dt class="col-sm-3">Protein (grams)</dt>
            <dd class="col-sm-9">@Model.ProteinGrams</dd>

            <dt class="col-sm-3">Carbs (grams)</dt>
            <dd class="col-sm-9">@Model.CarbsGrams</dd>

            <dt class="col-sm-3">Is Template</dt>
            <dd class="col-sm-9">@Model.IsTemplate</dd>

            <dt class="col-sm-3">User ID</dt>
            <dd class="col-sm-9">@Model.UserId</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="NutritionPlanEdit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="NutritionPlan" class="btn btn-secondary">Back to List</a>
</div>

