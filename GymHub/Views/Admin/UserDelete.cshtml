@model GymHub.Models.Users
@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<h3>Are you sure you want to delete this user?</h3>

<dl class="row">
    <dt class="col-sm-2">Full Name</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">User Name</dt>
    <dd class="col-sm-10">@Model.UserName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>
</dl>

<form asp-action="UserDelete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Users" class="btn btn-secondary">Cancel</a>
</form>
