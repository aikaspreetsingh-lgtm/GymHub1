@model IEnumerable<GymHub.Models.Users>
@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<p>
    <a asp-action="UserCreate" class="btn btn-primary">Create New User</a>
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</p>

<form asp-action="UsersBulk" asp-controller="Admin" method="post">
    @Html.AntiForgeryToken()

    <div class="row mb-3">
        <div class="col-auto">
            <select name="actionType" class="form-select" required>
                <option value="" disabled selected>-- Bulk Action --</option>
                <option value="delete">Delete</option>
        
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-danger">Apply</button>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" id="checkAll" />
                </th>
                <th>Full Name</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Phone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedIds" value="@user.Id" class="row-check" />
                    </td>
                    <td>@user.FullName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="UserEdit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="UserDelete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

@section Scripts {
    <script>
        // Select / Deselect all checkboxes
        document.getElementById("checkAll").addEventListener("change", function () {
            const checked = this.checked;
            document.querySelectorAll(".row-check").forEach(cb => cb.checked = checked);
        });
    </script>
}
