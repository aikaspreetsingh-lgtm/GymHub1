@model IEnumerable<GymHub.Models.WorkoutPlan>
@{
    ViewData["Title"] = "Workout Plan Templates 🗓️";
}

<h2>Workout Plan Templates</h2>

<p>
    <a class="btn btn-success" asp-action="WorkoutPlanCreate">+ Create Template</a>
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</p>
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text"
               class="form-control"
               name="search"
               value="@ViewData["Search"]"
               placeholder="Search by name..." />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Duration (weeks)</th>
            <th>Difficulty</th>
            <th>Goal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Title</td>
                <td>@p.DurationWeeks</td>
                <td>@p.DifficultyLevel</td>
                <td>@p.Goal</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-warning" asp-action="WorkoutPlanEdit" asp-route-id="@p.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="WorkoutPlanDelete" asp-route-id="@p.Id">Delete</a>
                    <a asp-action="WorkoutPlanDetails" asp-route-id="@p.Id" class="btn btn-info btn-sm">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>

