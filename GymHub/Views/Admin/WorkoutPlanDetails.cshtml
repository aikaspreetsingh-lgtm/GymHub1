@model GymHub.Models.WorkoutPlan
@{
    ViewData["Title"] = "Workout Plan Details";
}

<h2>Workout Plan Details</h2>

<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Duration (Weeks)</dt>
            <dd class="col-sm-9">@Model.DurationWeeks</dd>

            <dt class="col-sm-3">Difficulty Level</dt>
            <dd class="col-sm-9">@Model.DifficultyLevel</dd>

            <dt class="col-sm-3">Goal</dt>
            <dd class="col-sm-9">@Model.Goal</dd>

            <dt class="col-sm-3">Is Template</dt>
            <dd class="col-sm-9">@Model.IsTemplate</dd>

            <dt class="col-sm-3">User ID</dt>
            <dd class="col-sm-9">@Model.UserId</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="WorkoutPlanEdit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="WorkoutPlan" class="btn btn-secondary">Back to List</a>
</div>

