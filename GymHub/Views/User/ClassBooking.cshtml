@model IEnumerable<GymHub.Models.ClassBooking>

@{
    ViewData["Title"] = "My Class Bookings";
}

<h2>My Class Bookings</h2>
<p>
    <a asp-controller="User" asp-action="ClassBookingCreate" class="btn btn-primary">Book a Class</a>
    <a asp-controller="User" asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Class</th>
                <th>Starts</th>
                <th>Booked At</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.GymClass?.Title</td>
                    <td>@b.GymClass?.StartsAt</td>
                    <td>@b.BookedAt</td>
                    <td class="text-end">
                        <a asp-controller="User" asp-action="ClassBookingDetails" asp-route-id="@b.Id" class="btn btn-sm btn-info">Details</a>
                        
                        <form asp-controller="User" asp-action="CancelBooking" asp-route-id="@b.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You haven’t booked any classes yet.</p>
}

