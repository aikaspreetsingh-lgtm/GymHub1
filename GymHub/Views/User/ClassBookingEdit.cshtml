@model GymHub.Models.ClassBooking

@{
    ViewData["Title"] = "Edit Booking";
}

<h2>Edit Booking</h2>



<form asp-action="ClassBookingEdit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />


    <div class="mb-3">
        <label class="form-label" asp-for="GymClassId">Gym Class</label>
        <select asp-for="GymClassId" class="form-select" asp-items="ViewBag.GymClassId"></select>
        <span asp-validation-for="GymClassId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ClassBooking" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

