@model GymHub.Models.WorkoutSet

@{
    ViewData["Title"] = "Create Workout Set";
}

<h2>Create Workout Set</h2>

<form asp-controller="User" asp-action="WorkoutSetCreate" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
   

    <div class="mb-3">
        <label asp-for="ExerciseId" class="form-label"></label>
        <select asp-for="ExerciseId" class="form-select" asp-items="ViewBag.ExerciseId">
            <option value="">-- Select Exercise --</option>
        </select>
        <span asp-validation-for="ExerciseId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="WorkoutSessionId" class="form-label"></label>
        <select asp-for="WorkoutSessionId" class="form-select" asp-items="ViewBag.WorkoutSessionId">
            <option value="">-- Select Workout Session --</option>
        </select>
        <span asp-validation-for="WorkoutSessionId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Reps" class="form-label"></label>
        <input asp-for="Reps" class="form-control" />
        <span asp-validation-for="Reps" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <button asp-action="WorkoutSetCreate" type="submit" class="btn btn-primary">Create</button>
    <a asp-action="WorkoutSet" asp-route-workoutSessionId="@Model.WorkoutSessionId" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

