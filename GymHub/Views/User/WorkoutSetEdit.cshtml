@model GymHub.Models.WorkoutSet

@{
    ViewData["Title"] = "Edit Workout Set";
}

<h2>Edit Workout Set</h2>

<form asp-action="WorkoutSetEdit" method="post">
    @Html.AntiForgeryToken()
  

    <div class="mb-3">
        <label asp-for="Reps" class="form-label"></label>
        <input asp-for="Reps" class="form-control" />
        <span asp-validation-for="Reps" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="WorkoutSet" asp-route-workoutSessionId="@Model.WorkoutSessionId" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

